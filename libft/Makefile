NAME = libft.a

CC = gcc

CFLAGS = -Wall -Wextra -Werror -I.

AR = ar rcs
RM = rm -f

# ğŸ“‚ Code and object directories
SRCDIR = src
OBJDIR = obj

# ğŸ” Find source files in subdirectories
SRCS := $(shell find $(SRCDIR) -type f -name "*.c")
OBJS := $(SRCS:$(SRCDIR)/%.c=$(OBJDIR)/%.o)

# ğŸ¨ Colors
RED      = \033[0;31m
GREEN    = \033[0;32m
YELLOW   = \033[0;33m
MAGENTA  = \033[0;35m
CYAN     = \033[0;36m
WHITE    = \033[0;37m
RESET    = \033[0m

# ğŸš€ Main compilation
all: $(NAME)

# ğŸ”¨ Create .a archive (libft.a)
$(NAME): $(OBJDIR) $(OBJS)
	@echo "$(CYAN)ğŸ”— Creating $(NAME)...$(RESET)"
	@$(AR) $(NAME) $(OBJS)
	@echo "$(GREEN)âœ… $(NAME) successfully created.$(RESET)"

# ğŸ“‚ Create object directory
$(OBJDIR):
	@echo "$(CYAN)ğŸ“‚ Creating object directories...$(RESET)"
	@mkdir -p $(OBJDIR)
	@echo "$(GREEN)âœ… Object directories created.$(RESET)"

# ğŸ— Compile `.c` files into `.o`, keeping subdirectory structure
$(OBJDIR)/%.o: $(SRCDIR)/%.c | $(OBJDIR)
	@mkdir -p $(dir $@)
	@echo "$(YELLOW)ğŸ”¹ Compiling $< -> $@$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "$(GREEN)âœ… Compiled: $@$(RESET)"

# ğŸ§¹ Clean object files
clean:
	@echo "$(RED)ğŸ—‘ï¸  Deleting object files...$(RESET)"
	@$(RM) -rf $(OBJDIR)
	@echo "$(MAGENTA)âœ… Object cleanup complete.$(RESET)"

# ğŸ§¹ Full cleanup (removes objects and .a file)
fclean: clean
	@if [ -f "$(NAME)" ]; then \
		echo "$(RED)ğŸš® Deleting file $(NAME)...$(RESET)"; \
		$(RM) $(NAME); \
		echo "$(MAGENTA)âœ… $(NAME) removed.$(RESET)"; \
	fi

# ğŸ”„ Full recompilation
re: fclean all

.PHONY: all clean fclean re
